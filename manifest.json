{
  "manifest_version": 3,
  "name": "Prediction Market to Sports Odds Converter",
  "version": "1.0.0",
  "description": "Append sportsbook-style odds next to prediction market prices (Decimal, American, Fractional) with optional fee adjustment.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.polymarket.com/*",
        "https://*.kalshi.com/*",
        "https://kalshi.com/*",
        "https://polymarket.com/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://*.polymarket.com/*",
    "https://*.kalshi.com/*",
    "https://kalshi.com/*",
    "https://polymarket.com/*"
  ]
}
